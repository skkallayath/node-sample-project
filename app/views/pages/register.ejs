<div class="row">
    <div class="col-sm-8 col-sm-offset-2 text">
        <h1><strong>Sample</strong> Node App</h1>
        <div class="description">
            <p>
                A sample Node app that uses ejs, express-ejs-layouts, passportjs,etc.
            </p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>Signup</h3>
                <p>Enter your username and password to signup.</p>
            </div>
            <!--<div class="form-top-right">
                <i class="fa fa-key"></i>
            </div>-->
        </div>
        <div class="form-bottom">
            <form role="form" action="/signup" method="post" class="signup-form" id="signup_form">
                <div class="form-group text-center">
                    <label class="sr-only" for="username">Username</label>
                    <input type="text" name="username" placeholder="Username..." class="form-username form-control" id="username">
                </div>
                <div class="form-group text-center">
                    <label class="sr-only" for="password">Password</label>
                    <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="password">
                </div>
                <div class="form-group text-center">
                    <label class="sr-only" for="password_confirm">Confirm Password</label>
                    <input type="password" name="password_confirm" placeholder="Confirm Password..." class="form-password form-control" id="password_confirm">
                </div>
                <div class="form-group text-center">
                    <label class="error"><%= message %></label>
                    <button type="submit" class="btn">Sign Up!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="pull-right">Already have an account? <a href="/login" class="btn btn-default">Sign In</a> here</div>
    </div>
</div>

<%- contentFor('scripts') %>
    <script src="/js/validation/signup.js"></script>