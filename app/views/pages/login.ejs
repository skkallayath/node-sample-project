<div class="row">
    <div class="col-sm-8 col-sm-offset-2 text">
        <h1><strong>Sample</strong> Node App</h1>
        <div class="description">
            <p>
                A sample Node app that uses ejs, express-ejs-layouts, passportjs,etc.
            </p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>Login</h3>
                <p>Enter your username and password to log on:</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-key"></i>
            </div>
        </div>
        <div class="form-bottom">
            <form role="form" action="/login" class="login-form" id="login-form" method="post" >
                <div class="form-group text-center">
                    <label class="sr-only" for="username">Username</label>
                    <input type="text" name="username" placeholder="Username..." class="form-username form-control" id="username">
                </div>
                <div class="form-group text-center">
                    <label class="sr-only" for="password">Password</label>
                    <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="password">
                </div>
                <div class="form-group text-center">
                    <label class="error"><%= message %></label>
                    <button type="submit" class="btn">Sign in!</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="pull-right">New user? <a href="/signup" class="btn btn-default">Sign Up</a> here</div>
    </div>
</div>
<%- contentFor('scripts') %>
    <script src="/js/validation/login.js"></script>